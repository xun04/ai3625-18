{% set name = "brotlicffi" %}
{% set version = "1.2.0.0" %}

package:
  name: {{ name|lower }}
  version: {{ version }}

source:
  url: https://pypi.org/packages/source/{{ name[0] }}/{{ name }}/{{ name }}-{{ version }}.tar.gz
  sha256: 34345d8d1f9d534fcac2249e57a4c3c8801a33c9942ff9f8574f67a175e17adb

build:
  number: 0
  script: {{ PYTHON }} -m pip install . --no-deps --no-build-isolation -vv
  skip: true  # [py<38]

requirements:
  build:
    - {{ stdlib('c') }}
    - {{ compiler('c') }}
    - {{ compiler('cxx') }}
  host:
    - pip
    - python
    - setuptools
    - cffi >=1.0.0 # [py<313]
    - cffi >=1.17.0 # [py>=313]
  run:
    - cffi >=1.0.0 # [py<313]
    - cffi >=1.17.0 # [py>=313]
    - python

test:
  source_files:
    - test
  imports:
    - brotlicffi
  commands:
    - pip check
    - python -c "from importlib.metadata import version; assert(version('{{ name }}')=='{{ version }}')"
    # Cannot invoke upstream tests because of missing 'testdata' directory in git/pypi sources
    # ImportError while loading conftest '/.../conda-bld/brotlicffi_1762941054066/test_tmp/test/conftest.py'.
    # E   FileNotFoundError: [Errno 2] No such file or directory: '...conda-bld/brotlicffi_1762941054066/test_tmp/libbrotli/tests/testdata'
    # - pytest -v test
  requires:
    - pip

about:
  home: https://github.com/python-hyper/brotlicffi
  summary: Python CFFI bindings to the Brotli library
  description: Python CFFI bindings to the Brotli library
  license: MIT
  license_family: MIT
  license_file: LICENSE
  dev_url: https://github.com/python-hyper/brotlicffi
  doc_url: https://github.com/python-hyper/brotlicffi/blob/main/README.rst

extra:
  skip-lints:
    - host_section_needs_exact_pinnings
  recipe-maintainers:
    - sarthakpati
    - sethmlarson
    - katietz